<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:title="@string/auto_vocalize"
        android:key="auto_vocalize"
        android:defaultValue="false"
        />
    <ListPreference
        android:title="@string/recognizer"
        android:key="recognizer"
        android:entryValues="@array/recognizer_arr_val"
        android:entries="@array/recognizer_arr"
        android:defaultValue="1"
        />
    <CheckBoxPreference
        android:title="@string/offline_recognition"
        android:key="offline_recognition"
        android:defaultValue="false"
        />
</PreferenceScreen>